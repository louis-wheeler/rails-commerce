<tr class="product-row">
    <td class="col-xs-3 product-image"><img src="../images/products/<%= product.image %>" alt="<%= product.name %>"/></td>
    <td class="col-xs-6 product-name"><%= product.name %></td>
    <td class="col-xs-2 product-price"><%= '$' + product.price.to_s %></td>
    <td class="col-xs-1 product-action-view">
        <%= link_to 'View', product_path(product), class: 'btn btn-primary' %>
    </td>
    <% if logged_in? && current_user.isAdmin %>
        <td class="col-xs-1 product-action-edit">
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %>
        </td>
        <td class="col-xs-1 product-action-delete">
            <button type="button" class="btn btn-danger btn-delete-<%= product.id %>"
                    data-toggle="modal" data-target="#delete-modal-<%= product.id %>">
                    Delete
            </button>
        </td>
        <div id="delete-modal-<%= product.id %>" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span class="fa fa-close"/>
                        </button>
                        <h4 class="modal-title">Delete</h4>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this product? (<%= product.name %>)</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            <span class="fa fa-close"/> Cancel
                        </button>
                        <%= link_to raw('<div class="btn btn-danger"><span class="fa fa-trash"/> Delete</div>'), product_path(product), method: :delete %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</tr>
<tr class="product-row-detail">
    <td class="col-xs-3"><div></div></td>
    <td class="col-xs-6"><div><%= product.description %></div></td>
    <td class="col-xs-2"><div></div></td>
    <td class="col-xs-1"><div></div></td>
    <% if logged_in? && current_user.isAdmin %>
        <td class="col-xs-1"><div></div></td>
        <td class="col-xs-1"><div></div></td>
    <% end %>
</tr>